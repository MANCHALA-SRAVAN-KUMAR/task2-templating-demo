<!-- Technology Comparison -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="display-5 fw-bold">üõ†Ô∏è Technology Comparison</h2>
                <p class="lead text-muted">Why Nunjucks + Vite?</p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
