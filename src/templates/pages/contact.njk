                                    <option value="">Choose a topic...</option>
                                    <option value="task1">About Task 1 - Bootstrap Demo</option>
                                    <option value="task2">About Task 2 - Templating Engine</option>
                                    <option value="collaboration">Collaboration Opportunity</option>
